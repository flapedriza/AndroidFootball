<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginEnd="50dp"
        android:layout_weight="1"
        android:weightSum="11"
        >

        <TextView
            android:id="@+id/partit_item_identificador"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/partit_item_local"
            android:layout_width="0dp"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical|center_horizontal"
            android:text="F.C. Local"
            android:textSize="20sp"
            android:layout_weight="5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical|center_horizontal"
            android:text=" - "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/partit_item_visitant"
            android:layout_width="0dp"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical|center_horizontal"
            android:text="F.C. Visitant"
            android:textSize="20sp"
            android:layout_weight="5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginEnd="15dp"
        android:weightSum="7">
        <TextView
            android:id="@+id/partit_item_gols_local"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical|center_horizontal"
            android:text="12"
            android:textSize="20sp"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical"
            android:text=" - "
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/partit_item_gols_visitant"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical|center_horizontal"
            android:text="21"
            android:textSize="20sp"
            android:layout_weight="3"/>
    </LinearLayout>


</LinearLayout>